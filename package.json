{
  "name": "skift",
  "description": "Split testing tool for the Web",
  "version": "3.2.3",
  "author": "Trustpilot A/S",
  "bugs": {
    "url": "https://github.com/trustpilot/skift/issues"
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "7.0.0",
    "@commitlint/config-conventional": "7.0.1",
    "@semantic-release/git": "6.0.1",
    "ajv": "6.5.2",
    "css-loader": "0.28.11",
    "css-to-string-loader": "0.1.3",
    "html-webpack-plugin": "3.2.0",
    "husky": "0.14.3",
    "jest": "23.2.0",
    "jquery": "3.3.1",
    "querystringify": "2.0.0",
    "rimraf": "2.6.2",
    "semantic-release": "15.6.1",
    "ts-jest": "23.0.0",
    "ts-loader": "4.4.2",
    "tslint": "5.10.0",
    "typescript": "2.9.2",
    "uglifyjs-webpack-plugin": "1.2.7",
    "webpack": "4.14.0",
    "webpack-cli": "3.0.8",
    "webpack-serve": "1.0.4"
  },
  "files": [
    "dist",
    "src",
    "types"
  ],
  "homepage": "https://github.com/trustpilot/skift#readme",
  "license": "MIT",
  "main": "dist/skift.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/trustpilot/skift.git"
  },
  "scripts": {
    "build": "npm run clean && npm run build:dev && npm run build:prod",
    "build:dev": "webpack-cli --config ./config/webpack.dev.js",
    "build:prod": "webpack-cli --config ./config/webpack.prod.js",
    "clean": "rimraf dist/ yarn-error.log npm-debug.log",
    "commitmsg": "commitlint -E GIT_PARAMS",
    "lint": "tslint 'src/**/*.ts' --type-check --project ./",
    "start": "webpack-serve --config ./config/webpack.dev.js",
    "test": "jest --config ./config/jest.config.js",
    "ts": "tsc"
  },
  "types": "types/index.d.ts",
  "release": {
    "prepare": [
      "@semantic-release/npm",
      {
        "path": "@semantic-release/git",
        "assets": [
          "package.json",
          "package-lock.json"
        ],
        "message": "chore: ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "publish": [
      "@semantic-release/github",
      "@semantic-release/npm"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
